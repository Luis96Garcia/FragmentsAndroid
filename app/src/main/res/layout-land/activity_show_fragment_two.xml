<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:paddingLeft="0dp"
    android:paddingTop="0dp"
    android:paddingRight="0dp"
    android:paddingBottom="0dp"
    android:weightSum="1"
    android:paddingEnd="0dp"
    android:paddingStart="0dp"
    android:rowCount="1"
    android:columnCount="2">

    <fragment
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:name="com.example.luisg.applicationusingfragments.Fragment1"
        android:id="@+id/fragment2"
        tools:layout="@layout/fragment1"
        android:layout_marginLeft="35dp"
        android:layout_alignTop="@+id/fragment3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp" />

    <fragment
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:name="com.example.luisg.applicationusingfragments.Fragment2"
        android:id="@+id/fragment3"
        tools:layout="@layout/fragment2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/fragment2"
        android:layout_toEndOf="@+id/fragment2"
        android:layout_margin="20dp" />
</RelativeLayout>